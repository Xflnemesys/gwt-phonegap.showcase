<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">
	
	<mgwt:panel.flex.RootFlexPanel>
	    <mgwt:header.HeaderPanel>
			<mgwt:header.HeaderButton ui:field="backButton" backButton="true" text="Modules"/>
			<mgwt:panel.flex.FlexSpacer/>
			<mgwt:header.HeaderTitle>Accelerometer</mgwt:header.HeaderTitle>
			<mgwt:panel.flex.FlexSpacer/>
			<mgwt:panel.flex.FixedSpacer/>
		</mgwt:header.HeaderPanel>
		
		<mgwt:panel.scroll.ScrollPanel scrollingEnabledX="false">
			<g:FlowPanel>
				<mgwt:list.widgetlist.WidgetList round="true">
					<g:HorizontalPanel>
						<g:HTML>X Value:</g:HTML>
						<g:HTML ui:field="xValue"></g:HTML>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:HTML>Y Value:</g:HTML>
						<g:HTML ui:field="yValue"></g:HTML>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:HTML>Z Value:</g:HTML>
						<g:HTML ui:field="zValue"></g:HTML>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:HTML>Time:</g:HTML>
						<g:HTML ui:field="timestamp"></g:HTML>
					</g:HorizontalPanel>
				</mgwt:list.widgetlist.WidgetList>
				
				<mgwt:button.Button ui:field="startButton" ></mgwt:button.Button>
			</g:FlowPanel>
		</mgwt:panel.scroll.ScrollPanel>
		
	</mgwt:panel.flex.RootFlexPanel>
	
</ui:UiBinder> 